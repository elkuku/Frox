{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - MaxFields{% endblock %}

{% block body %}
    <h3>MaxFields</h3>
    <p>
        MaxfieldVersion: <code>{{ maxfieldVersion }}</code>
    </p>
    <ul>
        {% for item in list %}
            <li>
                <a href="{{ path('max_fields_gpx', {'item': item}) }}" class="btn btn-sm btn-success">
                    {{ 'Download GPX'|trans }}
                </a>
                <a href="{{ path('max_fields_gpxtrack', {'item': item}) }}" class="btn btn-sm btn-success">
                    {{ 'Download GPX Track'|trans }}
                </a>
                <a href="{{ path('max_fields_gpxroute', {'item': item}) }}" class="btn btn-sm btn-success">
                    {{ 'Download GPX Route'|trans }}
                </a>
                <a href="{{ path('max_fields_gpxroutetrack', {'item': item}) }}" class="btn btn-sm btn-success">
                    {{ 'GPX Route & Track'|trans }}
                </a>
                <a href="{{ path('max_fields_delete', {'item': item}) }}" class="btn btn-sm btn-danger">
                    {{ 'Delete'|trans }}
                </a>
                <a href="{{ path('max_fields_result', {'item': item}) }}">
                    {{ item }}
                </a>
            </li>
        {% endfor %}
    </ul>
{% endblock %}
