{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Import{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello {{ controller_name }}! âœ…</h1>

    This friendly message is coming from:
    <ul>
        <li>Your controller at <code><a href="{{ 'src/Controller/ImportController.php'|file_link(0) }}">src/Controller/ImportController.php</a></code></li>
        <li>Your template at <code><a href="{{ 'templates/import/index.html.twig'|file_link(0) }}">templates/import/index.html.twig</a></code></li>
