{% extends 'base-map.html.twig' %}

{% block title %}{{ parent() }} - Map{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('build/map.css') }}">
{% endblock %}

{% block body %}
    <div id="result">
        <button id="selectRect" title="Select Rectangle" class="btn btn-outline-secondary btn-sm"><span
                    class="oi oi-media-stop"></span></button>
        <button id="selectPoly" title="Select Polygon" class="btn btn-outline-secondary btn-sm"><span
                    class="oi oi-medical-cross"></span></button>
        {{ 'Waypoints:'|trans }}&nbsp;<code id="result_message">0</code>
        <button type="button" class="btn btn-outline-primary btn-sm" data-toggle="modal" data-target="#maxfieldModal">
            {{ 'Create MaxField'|trans }}
        </button>
        <button id="result_maxFields" class="btn btn-outline-secondary btn-sm">MaxField RAW</button>
        <button id="result_Gpx" class="btn btn-outline-secondary btn-sm">Gpx RAW</button>
    </div>

    <div id="map"></div>

    <!-- Modal -->

    <!-- Modal -->
    <div class="modal fade" id="maxfieldModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">{{ 'Create MaxField'|trans }}</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="status"></div>
                    <div class="controls">
                        {{ 'Create MaxFields for {numplayers} players'|trans({'{numplayers}': '<input type="text" id="players_num" class="col-2">'})|raw }}
                        <input type="text" id="build_name" placeholder="{{ 'name'|trans }}">
                    </div>
                </div>
                <div class="modal-footer">
                    <button id="build" class="btn btn-outline-primary btn-sm">{{ 'Create MaxField'|trans }}</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="resultModal" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">MaxFields</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <textarea class="modal-body" rows="15" cols="150"></textarea>
            </div>
        </div>
    </div>


    <script src="{{ asset('build/map.js') }}"></script>

{% endblock %}
